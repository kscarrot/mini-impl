{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@ks/*": ["./packages/*/src"]
    }
  },
  "exclude": ["./packages/*/esm", "./packages/*/lib"]
}
